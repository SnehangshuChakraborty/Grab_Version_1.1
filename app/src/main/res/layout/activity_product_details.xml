<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <ImageView
        android:id="@+id/Product_Imageview"
        android:layout_width="match_parent"
        android:layout_height="311dp"
         />

    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Product_Imageview"
        android:layout_marginTop="5sp"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Product Name" />

    <TextView
        android:id="@+id/Product_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name_details"
        android:layout_marginTop="10sp"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Product Description" />

    <TextView
        android:id="@+id/product_price_original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Product_description_details"
        android:layout_marginTop="10sp"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Original Price" />

    <TextView
        android:id="@+id/product_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_original"
        android:layout_marginTop="10sp"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Grab MRP" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_details"
        android:elevation="6dp"
        app:textSize="10dp"
        android:layout_marginTop="15sp"
        app:initialNumber="1"
        app:finalNumber="10"
        android:layout_centerHorizontal="true">
    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

    <Button
        android:id="@+id/Product_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:padding="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="Add to Cart"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary">
    </Button>
    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Product_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/nav_cart">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>-->
</RelativeLayout>