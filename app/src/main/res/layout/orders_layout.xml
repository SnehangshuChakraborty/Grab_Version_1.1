<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/order_user_name"
            android:padding="5dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></TextView>

        <TextView
            android:id="@+id/order_user_phone"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="PhoneNumber"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"></TextView>

        <TextView
            android:id="@+id/order_shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Address"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_below="@+id/order_user_name"
            android:gravity="center"
            android:layout_marginTop="10dp"></TextView>

        <TextView
            android:id="@+id/order_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Total"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_below="@+id/order_shipping_address"
            android:gravity="center"
            android:layout_marginTop="10dp"></TextView>

        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="OrderDate"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_below="@+id/order_total"
            android:gravity="center"
            android:layout_marginTop="10dp"></TextView>

        <Button
            android:id="@+id/list_all_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_date"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:text="Show Orders Placed"
            android:textAllCaps="false"
            android:textSize="20sp"/>

    </RelativeLayout>


</RelativeLayout>